%[{sasl, [
%         {sasl_error_logger, {file, "/var/log/mydlp.log"}},
%         {errlog_type, error},
%         ]},

[{sasl, [
         {sasl_error_logger, false},
         {errlog_type, error},
         {error_logger_mf_dir, "/var/lib/mydlp/sasl"},	% Log directory
         {error_logger_mf_maxbytes, 10485760},		% 10 MB max file size
         {error_logger_mf_maxfiles, 5}			% 5 files max
         ]},
{mydlp,[
	{log_path, "/var/log/mydlp/mydlp.log"},
	{pid_file, "/var/run/mydlp/mydlp.pid"},
	{ssl_files, [
          {certfile, "/etc/mydlp/ssl/public.pem"},
          {keyfile, "/etc/mydlp/ssl/private.pem"}
         ]},
	{mysql,[ 
          {host, "localhost"},
          {port, 3306},
          {user, "root"},
          {password, ""},
          {database, "mydlp"},
          {pool_size, 2}
         ]},
	{denied_page, "/etc/mydlp/denied_page.html"},
	{nlp_tr,[
	  {activate, true},
	  {pool_size, 2},
	  {kokler, "/usr/share/mydlp/resources/mydlp_nlp_tr_kokler.txt"}
	 ]},
	{smtp,[ 
          {helo_name, "mydlp.org"},
          {next_hop, {"localhost", 10026}}
         ]},
	{icap,[ 
          {path, "/dlp"},
          {max_connections, 1000},
          {options_ttl, 3600}
         ]}
	]}].
