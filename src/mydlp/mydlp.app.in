{application, mydlp,
 [
  {description, "An Example Distributed Network Application"},
  {vsn, "@VERSION@"},
  {id, "mydlp"},
  {modules,
    [
        dynamic_compile,
        gen_server_cluster,
        mime_util,
        mydlp_acl,
        mydlp_api,
        mydlp_app,
        mydlp_acceptor,
	mydlp_bayeserl_store,
        mydlp_dynamic,
        mydlp_fsm,
        mydlp_http_fsm,
        mydlp_icap_fsm,
        mydlp_loglevel,
        mydlp_logger_h,
        mydlp_matchers,
        mydlp_mnesia,
        mydlp_mysql,
        mydlp_nlp_tr,
        mydlp_pg_sup,
        mydlp_regex,
        mydlp_smtp_fsm,
        mydlp_smtpc,
        mydlp_sup,
        mydlp_tc,
        mydlp_ts,
        mydlp_trainer,
        mydlp_worker_sup,
        smtpc,
        smtpd_cmd,
        smtpc_fsm
    ]},
  {registered,   []},
  {applications, [kernel, stdlib, sasl, bayeserl]},
  %%
  %% mod: Specify the module name to start the application, plus args
  %%
  {mod, {mydlp_app, []}},
  {env,
   [
    {shared_workers, [
          {mydlp_mnesia, start_link,[]},
          {mydlp_mysql, start_link,[]},
          {mydlp_regex, start_link,[]}, 
          {pg, {mydlp_tc, start_link,[]}, 4}, 
          {mydlp_acl, start_link,[]}, 
          {pg, {mydlp_nlp_tr, start_link,[]}, 2}, 
          {mydlp_trainer, start_link,[]},
          {mydlp_ts, start_link,[]}
         ]},
    {protocols, [
%	  {http, {acceptor, {8080, plain, http} },
%                 {workers, []}
%	  },
%	  {https, {acceptor, {8443, ssl, http} },
%                 {workers, []}
%	  },
	  {icap, {acceptor, {1344, plain, icap} },
                 {workers, []}
	  },
	  {smtp, {acceptor, {10026, plain, smtp} },
                 {workers, [
			  {mydlp_smtpc, start_link,[]} 
			]}
	  }
	 ]}
   ]}
 ]
}.
